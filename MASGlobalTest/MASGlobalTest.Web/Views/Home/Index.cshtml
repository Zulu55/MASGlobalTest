@model MASGlobalTest.Web.Models.EmployeeViewModel

@{
    ViewData["Title"] = "MASGlobal";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<h2>Employees</h2>
<h4>Type the employee id to get the information or just click on the button to get all the employees.</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Get Employees</button>
            </div>
        </form>
    </div>
</div>

<div class="alert-danger">
    <h4>@ViewBag.Message</h4>
</div>

<hr />
@if (Model.Employees != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Employees</h2>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().ContractTypeName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().RoleId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().RoleName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().RoleDescription)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().HourlySalary)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().MonthlySalary)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employees.FirstOrDefault().AnnualSalary)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Employees)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContractTypeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleDescription)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HourlySalary)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MonthlySalary)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AnnualSalary)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}